# Railway Environment Configuration for BIST DP-LSTM Trading System

# Application Settings
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
PYTHONPATH=/app

# Server Configuration
HOST=0.0.0.0
PORT=8000
MAX_WORKERS=1
WEB_CONCURRENCY=1
TIMEOUT=300
KEEPALIVE=5

# Trading System Configuration
INITIAL_CAPITAL=100000.0
MAX_POSITIONS=10
MAX_DAILY_LOSS=0.05
COMMISSION_RATE=0.001

# Signal Generation Settings
BUY_THRESHOLD=0.65
SELL_THRESHOLD=0.65
MIN_EXPECTED_RETURN=0.012
MAX_SIGNALS_PER_SYMBOL=10
SIGNAL_COOLDOWN_HOURS=2

# Risk Management
MAX_POSITION_SIZE_PCT=0.15
MAX_TOTAL_EXPOSURE_PCT=0.8
CASH_RESERVE_PCT=0.05
MAX_PORTFOLIO_DRAWDOWN=0.15
POSITION_TIMEOUT_HOURS=72

# Execution Settings
EXECUTION_ALGORITHM=vwap
MARKET_IMPACT_MODEL=sqrt
LIQUIDITY_FACTOR=1000000.0
SLIPPAGE_MODEL=adaptive

# Metrics & Monitoring
METRICS_COLLECTION_INTERVAL=30
ALERT_COOLDOWN=300
HEALTH_CHECK_TIMEOUT=120

# Model Configuration
MODEL_UPDATE_INTERVAL=3600
FEATURE_UPDATE_INTERVAL=300
PREDICTION_CACHE_TTL=60

# Database Configuration (Railway will override these)
# DATABASE_URL will be provided by Railway PostgreSQL service
# REDIS_URL will be provided by Railway Redis service

# External API Configuration
# MATRIKS_API_KEY=your_matriks_api_key_here
# NEWS_API_KEY=your_news_api_key_here
# FINANCIAL_API_KEY=your_financial_api_key_here

# Security Settings
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# Railway Specific Settings
RAILWAY_STATIC_URL=
RAILWAY_GIT_COMMIT_SHA=
RAILWAY_GIT_BRANCH=
RAILWAY_ENVIRONMENT_NAME=production
